<div class="flex flex-col space-y-28">
  <section class="flex flex-col space-y-14">
    <div>
      <h2 class="text-3xl text-blueGrey-800 font-extrabold tracking-wide mb-6">Últimos Artículos</h2>
      <div class="w-full border-b-2 border-blueGrey-300"></div>
    </div>
    <ul class="grid grid-cols-3 gap-y-16 gap-x-12">
      <% @last_articles.each do |article| %>
        <li><%= render "articles/article", article: article %></li>
      <% end %>
    </ul>
  </section>
  <section class="flex flex-col space-y-14">
    <div>
      <h2 class="text-3xl text-blueGrey-800 font-extrabold tracking-wide mb-6">Artículos Gratis</h2>
      <div class="w-full border-b-2 border-blueGrey-300"></div>
    </div>
    <ul class="grid grid-cols-3 gap-y-16 gap-x-12">
      <% @free_articles.each do |article| %>
        <li><%= render "articles/article", article: article %></li>
      <% end %>
    </ul>
  </section>
</div>