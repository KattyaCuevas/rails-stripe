<div class="max-w-md mx-auto flex flex-col space-y-2">
  <h2 class="text-2xl font-extrabold text-blueGrey-800 text-center tracking-wide">RegÃ­strate</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'flex flex-col space-y-6'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col space-y-1">
      <%= f.label :email, class: 'font-medium text-blueGrey-800 text-sm' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <div class="flex flex-col space-y-1">
      <div>
        <%= f.label :password, class: 'font-medium text-blueGrey-800 text-sm' %>
        <% if @minimum_password_length %>
        <em class="text-blueGrey-700">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <div class="flex flex-col space-y-1">
      <%= f.label :password_confirmation, class: 'font-medium text-blueGrey-800 text-sm' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <div>
      <%= f.submit "Crear cuenta", class: "bg-vividGreen-500 text-vividGreen-50 py-2 px-8 rounded-lg hover:bg-vividGreen-600" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>