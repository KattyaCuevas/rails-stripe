<div class="max-w-md mx-auto flex flex-col space-y-2">
  <h2 class="text-2xl font-extrabold text-blueGrey-800 text-center tracking-wide">Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col space-y-6' }) do |f| %>
    <div class="flex flex-col space-y-1">
      <%= f.label :email, class: 'font-medium text-sm text-blueGrey-800' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <div class="flex flex-col space-y-1">
      <%= f.label :password, class: 'font-medium text-sm text-blueGrey-800' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'text-blueGrey-600 text-sm' %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Iniciar Sesión", class: "bg-vividGreen-500 text-vividGreen-50 py-2 px-8 rounded-lg hover:bg-vividGreen-600" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>