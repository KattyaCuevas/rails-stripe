<div class="max-w-md mx-auto flex flex-col space-y-2">
  <h2 class="text-2xl font-extrabold text-blueGrey-800 text-center tracking-wide">¿Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'flex flex-col space-y-6' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col space-y-1">
      <%= f.label :email, class: 'font-medium text-blueGrey-800 text-sm' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border border-blueGrey-200 rounded-lg px-4 py-2' %>
    </div>

    <div>
      <%= f.submit "Enviar instrucciones para restablecer la contraseña", class: "bg-vividGreen-500 text-vividGreen-50 py-2 px-8 rounded-lg hover:bg-vividGreen-600" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>