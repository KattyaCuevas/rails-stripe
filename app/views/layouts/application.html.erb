<!DOCTYPE html>
<html>
  <head>
    <title>RailsStripe</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind" %>
  </head>

  <body>
    <nav class="border-b-4 border-vividGreen-500">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex justify-between items-center">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path do %>
            <%= image_tag '/Logo.png', class: 'h-8 w-auto' %>
          <% end %>
        </div>
        <div class="flex space-x-8 items-center">
          <% if user_signed_in? %>
            <div class="flex flex-col items-end">
              <%= link_to current_user.email, "#", class: 'font-bold text-sm text-blueGrey-700 hover:text-vividGreen-500' %>
              <%= link_to 'Cerrar Sesión', destroy_user_session_path, method: :delete, class: 'font-bold text-vividGreen-500 uppercase text-sm' %>
            </div>
            <%= link_to current_orders_path, class: "flex flex-row items-center text-blueGrey-700" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              ( 0 )
            <% end %>
          <% else %>
            <%= link_to "Iniciar Sesión", new_user_session_path, class: "text-blueGrey-700 py-3 px-1 text-sm hover:text-vividGreen-500" %>
            <%= link_to "Regístrate", new_user_registration_path, class: "bg-vividGreen-500 text-vividGreen-50 py-3 px-4 rounded-lg text-sm hover:bg-vividGreen-600" %>
          <% end %>
        </div>
      </div>
    </nav>

    <% if notice %>
      <div class="bg-green-100"><p class="container mx-auto notice px-4 py-2 text-sm"><%= notice %></p></div>
    <% end %>
    <% if alert %>
      <div class="bg-red-200"><p class="container mx-auto notice px-4 py-2 text-sm"><%= alert %></p></div>
    <% end %>
    <main>
      <div class="max-w-screen-xl mx-auto py-20 px-4 sm:px-6 lg:px-8">
        <%= yield %>
      </div>
    </main>
  </body>
</html>
